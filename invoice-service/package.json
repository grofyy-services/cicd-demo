{
  "name": "invoice-service",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "migration:up": "typeorm-ts-node-commonjs -d src/dataSource.ts migration:run",
    "migration:down": "typeorm-ts-node-commonjs -d src/dataSource.ts migration:revert",
    "migration:generate": "sh -c 'typeorm-ts-node-commonjs -d src/dataSource.ts migration:generate src/migrations/\"$1\"' _",
    "migration:create": "sh -c 'typeorm-ts-node-commonjs migration:create src/migrations/\"$1\"' _"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "kafkajs": "^2.2.4",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
